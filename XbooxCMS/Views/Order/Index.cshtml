    <script src="https://cdn.jsdelivr.net/npm/promise-polyfill"></script>*@

<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/sweetalert2@10.2.0/dist/sweetalert2.all.min.js"></script>

<!-- 使用vue -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.6.11/vue.min.js"></script>

@section scripts{
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#ordertable').DataTable({
                ajax: {
                    url: "/Api/Order",
                    dataSrc: ""
                },

                columns: [
                    {
                        data: 'OrderId',

                    },
                    {
                        data: 'UserName'
                    },
                    {
                        data: 'OrderDate'
                    },
                    {
                        data: 'PurchaserName'
                    },

                    {
                        data: 'PurchaserEmail'
                    },
                    {
                        data: 'PurchaserAddress'
                    },
                    {
                        data: 'Payment'
                    },
                    {
                        data: 'Build'
                    },

                    {
                        data: 'Paid',
                        render: function (data) {
                            if (data != true) {
                                return '<div class="text-danger">未付款</div>'
                            }
                            else {
                                return '<div class="text-success">已付款</div>'
                            }

                        }
                    },
                    {
                        data: 'OrderId',
                        render: function (data) {
                            return `<button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" id=${data} data-toggle="modal" data-target="#orderDetails" onclick="checkDetails('${data}')">查看</button>`
                        }
                    },
                    {
                        data: 'OrderId',
                        render: function (data) {
                            return `<button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect  mdl-button--accent" id=${data} data-toggle="modal" data-target="#deleteOrder" onclick="cancleOrder('${data}')">取消</button>`
                            //return ` <input type="button" value="取消" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent  " id=${data} data-toggle="modal" data-target="#deleteOrder">`

                        }
                    }

                ]


            });
        });

    </script>

    <script>
        var checkDetails;
        var cancleOrder;
        window.addEventListener("load", function () {
            let detailsBtn = $("button[data-target='#orderDetails']");
            let detailsBody = $("#orderDetails .modal-body tbody");
            let editBtn = $("input[data-target='#editOrder']");
            let deleteBtn = $("button[data-target='#deleteOrder']");
            let redirectUrl = "/order/Index";
            checkDetails = function (id) {
                console.log('--- detail');
                $.ajax({
                    url: `/api/order/${id}`,
                    method: "get",
                    //dataType: "json",
                    success: function (res) {
                        console.log(res);
                        let total = 0
                        detailsBody.text('');
                        res.forEach(item => {
                            let tr = $("<tr></tr>");
                            let OrderDetailsList = $($("#OrderDetailsList").html());
                            let values = Object.values(item);
                            for (let i = 1; i < values.length; i++) {
                                OrderDetailsList.eq(2 * (i - 1)).text(values[i]);
                            }
                            total += parseInt(values[values.length - 1]);
                            tr.append(OrderDetailsList);
                            detailsBody.append(tr);
                        })
                        let endtr = $(`<tr><td colspan="4"><span class="d-inline-block w-50 font-weight-bold">總額</span><span style="font-size: 20px" class="d-inline-block w-50 text-right text-danger font-weight-bold">${total}</span></td></tr>`);
                        detailsBody.append(endtr);
                    },
                    error: function (err) { console.log(err) },
                });
            };


            cancleOrder = function (id) {
                console.log('--- delete');
                Swal.fire({
                    title: '取消訂單',
                    text: "取消訂單後就無法返回",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: '我要取消!',
                    preConfirm: () => {
                        $.ajax({
                            type: "post",
                            url: `/api/order/${id}`,
                            data: "{}",
                            contentType: "application/json; charset=utf-8",

                            success: function (response) {
                                //var deleteRow = document.querySelector(".sorting_1").parentElement;
                                //$('#ordertable').DataTable.row(deleteRow).remove().draw();
                                window.location.href = redirectUrl;
                            }
                        })
                    },
                    allowOutsideClick: () => !Swal.isLoading()
                })
            };
        });
    </script>
}