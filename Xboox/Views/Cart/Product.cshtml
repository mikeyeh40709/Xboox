
@{
    ViewBag.Title = "Product";
}
<input type="checkbox" id="check" >
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="card-section">

                    <div class="title">
                        <div class="col-sm-6">
                            <p>Product</p>
                        </div>
                        <div class="col-sm-2">
                            <p>Price</p>
                        </div>
                        <div class="col-sm-2">
                            <p>Quantity</p>
                        </div>
                        <div class="col-sm-2">
                            <p>Total</p>
                        </div>
                    </div>
                    <hr />
                    <div class="content">
                        <div class="col-sm-6">
                            <img src="~/Pics/Wellness And Paradise.png" width="50px;" />
                            <a href="#">Wellness And Paradise</a>
                        </div>
                        <div class="col-sm-2">
                            <span class="price"></span>
                        </div>
                        <div class="col-sm-2">
                            <i class="fas fa-caret-left fa-3x"></i>
                            <span id="count"><b>1</b></span>
                            <i class="fas fa-caret-right fa-3x"></i>

                        </div>
                        <div class="col-sm-2">
                            <span class="total"></span>
                        </div>
                    </div>
                </div>

            </div>

            <button>RETURN TO SHOP</button>
            <div class="col-sm-12 data">
                <div class="title"><h2>Basket totals</h2></div>
                <div class="col-sm-3">
                    <span>Total</span>
                </div>
                <div class="col-sm-9">
                    <span class="total"></span>
                </div>
            </div>
            <div class="col-sm-12 data">
                <div class="col-sm-3">
                    <span>Shipping</span>
                </div>
                <div class="col-sm-9">
                    <span>Shipping to <b>Taiwan</b>.</span>
                    <a href="#">
                        Change Address
                    </a>
                    <select><option>a</option></select>
                    <input type="text" placeholder="State/Country" />
                    <input type="text" placeholder="Town/City" />
                    <input type="text" placeholder="PostCode/Zip" />

                </div>
                <button>
                    Proceed to checkout
                </button>
            </div>

          
          



        </div>
            </div>

  




