@model IEnumerable<Xboox.Models.ViewModels.CartViewModel>
@{
    ViewBag.Title = "Product";
}
<input type="checkbox" id="check" >
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="card-section">

                    <div class="title">
                        <div class="col-sm-6">
                            <p>Product</p>
                        </div>
                        <div class="col-sm-2">
                            <p>Price</p>
                        </div>
                        <div class="col-sm-2">
                            <p>Quantity</p>
                        </div>
                        <div class="col-sm-2">
                            <p>Total</p>
                        </div>
                    </div>
                    <hr />
                    <div class="content">
                        <div class="col-sm-6">
                            <img src="~/Pics/Wellness And Paradise.png"/>
                            <a href="#">Wellness And Paradise</a>
                        </div>
                        <div class="col-sm-2">
                            <span class="price"></span>
                        </div>
                        <div class="col-sm-2">
                            <i class="fas fa-caret-left fa-3x"></i>
                            <span id="count"><b>1</b></span>
                            <i class="fas fa-caret-right fa-3x"></i>

                        </div>
                        <div class="col-sm-2">
                            <span class="total"></span>
                        </div>
                    </div>
                </div>
                <div class="col-7 col-sm-7">
                    <span class="coupon_price"></span>
                </div>
            </div>
            <div class="col-sm-12 d-flex mt-3 mb-4">
                <div class="col-sm-8">
                    <input type="text" placeholder="Enter your coupon code" />
                </div>
                <div class="col-sm-3">
                    <p class="badge rounded-circle  bg-secondary p-2">Apply</p>
                </div>

            </div>
        </div>
        <div class="col-sm-12 mt-2  d-flex ">
            <button>RETURN TO SHOP</button>
            <button class="proceed ml-2">
                Proceed to checkout
            </button>
        </div>
    </div>
</div>
@Scripts.Render("~/Assets/JavaScript/Custom/CartPage/cart.js")





