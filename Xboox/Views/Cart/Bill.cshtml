
@{
    ViewBag.Title = "Bill";
}

<div class="row">
    <div class="col-12 col-md-6">
        <h1>Bill Details</h1>
        <form>
            <div class="d-flex">
                <div class="form-group">
                    <label for="firstName">姓氏</label>
                    <input type="text" class="form-control" id="firstName" placeholder="FirstName">
                </div>
                <div class="form-group">
                    <label for="lastName">名稱</label>
                    <input type="text" class="form-control" id="lastName" placeholder="Last Name">
                </div>
            </div>
            <div class="form-group">
                <label for="city">城市</label>
                <select class="form-control" id="city">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
                <label for="area">區域</label>
                <select class="form-control" id="area">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <div class="form-group">
                <label for="address">地址</label>
                <input type="text" class="form-control" id="address" placeholder="請輸入地址">
            </div>
            <div class="form-group">
                <label for="phone">電話</label>
                <input type="tel" class="form-control" id="phone" placeholder="請輸入電話">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" placeholder="請輸入郵件地址">
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox"> Check me out
                </label>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
    <div class="col-12 col-md-6">
        <h1>訂單資訊</h1>

    </div>
</div>

