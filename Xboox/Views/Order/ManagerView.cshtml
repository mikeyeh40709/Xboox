@model IEnumerable<Xboox.ViewModels.OrderViewModel>
@{
    ViewBag.Title = "Order";
}

<h2 class="mb-3">所有訂單</h2>
<section class="shop-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shop__cart__table">
                    <table class="text-center">
                        <thead>
                            <tr>
                                <th>訂單編號</th>
                                <th>建立人</th>
                                <th>建立日期</th>
                                <th>收件人姓名</th>
                                <th>收件人信箱</th>
                                <th>收件人地址</th>
                                <th>訂單明細</th>
                                <th>付款狀態</th>
                                <th>編輯與刪除</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th>@item.OrderId</th>
                                    <th>@item.UserName</th>
                                    <td>@item.OrderDate</td>
                                    <td>@item.PurchaserName</td>
                                    <td>@item.PurchaserEmail</td>
                                    <td>@item.PurchaserAddress</td>
                                    <td>
                                        <button class="site-btn bg-info" id="@item.OrderId" data-toggle="modal" data-target="#orderDetails">查看</button>
                                    </td>
                                    <td>
                                        @if (item.StateId == 0)
                                        {
                                            <div class="text-danger">未付款</div>
                                        }
                                        else
                                        {
                                            <div class="text-success">已付款</div>
                                        }

                                    </td>
                                    <td>
                                        <button type="submit" class="site-btn bg-secondary" data-toggle="modal" data-target="#editOrder">編輯</button>
                                        <button type="submit" class="site-btn" data-toggle="modal" data-target="#deleteOrder">刪除</button>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="modal fade" id="orderDetails" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="details" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="details">訂單明細</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">圖片</th>
                            <th scope="col">名稱</th>
                            <th scope="col">數量</th>
                            <th scope="col">單價</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
<script src="https://cdn.jsdelivr.net/npm/promise-polyfill"></script>
<script>
    let detailsBtn = document.querySelector("button[data-target='#orderDetails']");
    let detailsModal = document.querySelector("#orderDetails tbody");
    detailsBtn.addEventListener("click", function () {
        @foreach(var item in Model)
        {
        <text>
        if(this.id == "@item.OrderId")
        {
            let htmlString = "";
            @foreach (var detail in item.OrderDetailsList)
            {
                <text>
                    htmlString += "<tr><td>@detail.Imagelink</td><td>@detail.ProductName</td><td>@detail.Quantity</td><td>@detail.UnitPrice</td></tr>";
                </text>
            }
            detailsModal.innerHTML = htmlString;
        }
        </text>
        }
    })

    let deleteBtn = document.querySelector("button[data-target='#deleteOrder']");
    deleteBtn.addEventListener("click", deleteOrder);
    function deleteOrder() {
        Swal.fire({
            title: '取消訂單',
            text: "取消訂單後就無法返回",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: '刪除!'
        }).then((result) => {
            if (result.value) {
                Swal.fire(
                    'Deleted!',
                    '已成功刪除.',
                    'success'
                )
            }
        })
    }
</script>
@section OrderCSS {
    <link type="text/css" rel="stylesheet" href="~/Assets/CSS/Custom/OrderPage/CustomOrder.css" />
}
