@model IEnumerable<Xboox.ViewModels.CartViewModel>

@{
    ViewBag.Title = "CreateOrder";
    decimal total = 0m;
    foreach (var item in Model)
    {
        total += Math.Round(item.Price);
    }
    ViewBag.Total = total;
}
<form action="/Order/CreateOrder" class="checkout__form" method="post">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-6">
                <h5>Billing detail</h5>
                <div class="row">
                    @Html.AntiForgeryToken()
                    <div class="col-lg-12">
                        <div class="checkout__form__input">
                            <p>Name <span>*</span></p>
                            <input type="text" name="PurchaserName" required>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="checkout__form__input">
                            <p>Address <span>*</span></p>
                            <input type="text" placeholder="請輸入地址" name="PurchaserAddress" required>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="checkout__form__input">
                            <p>Phone <span>*</span></p>
                            <input type="tel" name="PurchaserPhone" required>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="checkout__form__input">
                            <p>Email <span>*</span></p>
                            <input type="email" name="PurchaserEmail" required>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="checkout__form__checkbox">
                            <input type="radio" id="Unpaid" name="StateId" value="0" required/><label class="d-inline" for="Unpaid">
                                貨到付款
                            </label>
                            <input type="radio" id="Paid" name="StateId" value="1" required/><label class="d-inline-block" for="Paid">
                                信用卡
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="checkout__order">
                    <h5>Your order</h5>
                    <div class="checkout__order__product">
                        <ul>
                            <li class="d-flex justify-content-between">
                                <span class="top__text d-inline-block" style="width: 70%;">Product</span>
                                <span class="top__text d-inline-block text-center" style="width: 15%;">Quantity</span>
                                <span class="top__text d-inline-block text-right" style="width: 15%;">Total</span>
                            </li>
                            @foreach (var item in Model)
                            {
                                <li class="d-flex justify-content-between">
                                    <span class="d-inline-block" style="width: 70%; text-overflow: ellipsis">@item.Name</span>
                                    <span class="d-inline-block text-center" style="width: 15%; text-overflow: ellipsis">@item.Quantity</span>
                                    <span class="d-inline-block text-right" style="width: 15%;">@Math.Round(item.Price)</span>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="checkout__order__total">
                        <ul>
                            <li>
                                Total
                                <span>$@ViewBag.Total</span>
                            </li>
                        </ul>
                    </div>
                    <button type="submit" class="site-btn">Place order</button>
                </div>
            </div>
        </div>
    </div>
</form>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
