<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Ashion Template">
    <meta name="keywords" content="Ashion, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Xboox</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Cookie&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800;900&display=swap"
          rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link href="~/Assets/TemplateCSS/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/TemplateCSS/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Assets/TemplateCSS/magnific-popup.css" rel="stylesheet" />
    <link href="~/Assets/TemplateCSS/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Assets/TemplateCSS/slicknav.min.css" rel="stylesheet" />
    <link href="~/Assets/TemplateCSS/style.css" rel="stylesheet" />
    <link href="~/Assets/TemplateCSS/elegant-icons.css" rel="stylesheet" />
    <link href="~/Assets/TemplateCSS/font-awesome.min.css" rel="stylesheet" />
    @RenderSection("topCSS", required: false)
    @RenderSection("topJS", required: false)
</head>

<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Offcanvas Menu Begin -->
    <div class="offcanvas-menu-overlay"></div>
    <div class="offcanvas-menu-wrapper">
        <div class="offcanvas__close">+</div>
        <ul class="offcanvas__widget">
            <li><span class="icon_search search-switch"></span></li>
            <li>
                <a href="#">
                    <span class="icon_heart_alt"></span>
                    <div class="tip">2</div>
                </a>
            </li>
            <li>
                <a href="#">
                    <span class="icon_bag_alt"></span>
                    <div class="tip">2</div>
                </a>
            </li>
        </ul>
        <div class="offcanvas__logo">
            <a href="./index.html"><img src="~/Assets/Image/Pics/logo.png" alt=""></a>
        </div>
        <div id="mobile-menu-wrap"></div>
        <div class="offcanvas__auth">
            <a href="#">Login</a>
            <a href="#">Register</a>
        </div>
    </div>
    <!-- Offcanvas Menu End -->
    <!-- Header Section Begin -->
    <header class="header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-3 col-lg-2">
                    <div class="header__logo">
                        @*@Html.ActionLink("Xboox", "Index", "Home", new { }, new { @class="ml-5"})*@
                        <a href="/Home/Index">
                            <h3 class="ml-5">Xboox</h3>
                        </a>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-7">
                    <nav class="header__menu">
                        <ul>
                            <li class="active"><a href="./shop.html">全部書籍</a></li>
                            <li><a href="#">中文書</a></li>
                            <li><a href="#">外文書</a></li>
                            <li><a href="#">電子書</a></li>
                            <li><a href="#">小說</a></li>
                            <li><a href="#">雜誌</a></li>
                            <li><a href="#">漫畫</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3">
                    <div class="header__right">
                        <div class="header__right__auth">
                            @*<a href="#" class="btn btn-outline-secondary text-dark">Login</a>*@
                            @Html.ActionLink("Login", "Index", "SignIn", new { }, new { @class = "btn btn-outline-secondary text-dark" })
                            @Html.ActionLink("Register", "Index", "Register", new { }, new { @class = "btn btn-outline-secondary text-dark" })
                        </div>
                        <ul class="header__right__widget">
                            <li><span class="icon_search search-switch"></span></li>
                            <li>
                                <a href="#">
                                    <span class="icon_heart_alt"></span>
                                    <div class="tip">2</div>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <span class="icon_bag_alt"></span>
                                    <div class="tip">2</div>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="canvas__open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>
    <!-- Header Section End -->
    <!-- Search Begin -->
    <div class="search-model">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-switch">+</div>
            <form class="search-model-form">
                <input type="text" id="search-input" placeholder="Search here.....">
            </form>
        </div>
    </div>
    @RenderBody()
    <!-- Search End -->
    <!-- Footer Section Begin -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-7">
                    <div class="footer__about">
                        <div class="footer__logo d-flex justify-content-center align-items-center">
                            <img src="~/Assets/Image/Pics/logo.png" />
                            <a href="./index.html" class="mx-3">Xboox</a>
                        </div>
                        <p class="text-center">All in one.</p>
                        <div class="footer__payment text-center">
                            <a href="#"><img src="~/Assets/TemplateImg/payment/payment-1.png" alt=""></a>
                            <a href="#"><img src="~/Assets/TemplateImg/payment/payment-2.png" alt=""></a>
                            <a href="#"><img src="~/Assets/TemplateImg/payment/payment-3.png" alt=""></a>
                            <a href="#"><img src="~/Assets/TemplateImg/payment/payment-4.png" alt=""></a>
                            <a href="#"><img src="~/Assets/TemplateImg/payment/payment-5.png" alt=""></a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-5">
                    <div class="footer__widget">
                        <h6>Quick links</h6>
                        <ul>
                            <li><a href="#">About</a></li>
                            <li><a href="#">Blogs</a></li>
                            <li><a href="#">Contact</a></li>
                            <li><a href="#">FAQ</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-4">
                    <div class="footer__widget">
                        <h6>Account</h6>
                        <ul>
                            <li><a href="#">My Account</a></li>
                            <li><a href="#">Orders Tracking</a></li>
                            <li><a href="#">Checkout</a></li>
                            <li><a href="#">Wishlist</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-8 col-sm-8">
                    <div class="footer__newslatter">
                        <h6>NEWSLETTER</h6>
                        <form action="#">
                            <input type="text" placeholder="Email">
                            <button type="submit" class="site-btn">Subscribe</button>
                        </form>
                        <div class="footer__social">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-youtube-play"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                            <a href="#"><i class="fa fa-pinterest"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    <div class="footer__copyright__text">
                        <p>
                            Copyright &copy;
                            <script>
                                document.write(new Date().getFullYear());
                            </script> All rights reserved | This website with <i class="fa fa-heart"
                                                                                          aria-hidden="true"></i> by Xboox
                        </p>
                    </div>
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Section End -->
    <!-- Js Plugins -->
    <script src="~/Assets/TemplateJavaScript/jquery-3.3.1.min.js"></script>
    <script src="~/Assets/TemplateJavaScript/bootstrap.min.js"></script>
    <script src="~/Assets/TemplateJavaScript/jquery.magnific-popup.min.js"></script>
    <script src="~/Assets/TemplateJavaScript/jquery-ui.min.js"></script>
    <script src="~/Assets/TemplateJavaScript/mixitup.min.js"></script>
    <script src="~/Assets/TemplateJavaScript/jquery.countdown.min.js"></script>
    <script src="~/Assets/TemplateJavaScript/jquery.slicknav.js"></script>
    <script src="~/Assets/TemplateJavaScript/owl.carousel.min.js"></script>
    <script src="~/Assets/TemplateJavaScript/jquery.nicescroll.min.js"></script>
    <script src="~/Assets/TemplateJavaScript/main.js"></script>
    @*<script src="https://kit.fontawesome.com/cd487e856f.js" crossorigin="anonymous"></script>*@

    @RenderSection("endCSS", required: false)
    @RenderSection("endJS", required: false)
</body>
</html>