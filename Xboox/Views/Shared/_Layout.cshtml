        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" href="#"><img src="~/Pics/logo.png" alt="XbooxLogo" /></a>
            @Html.ActionLink("Xboox", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#xbooxnavbar" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
