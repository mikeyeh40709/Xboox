<div class="sidebar__filter">
    <div class="section-title">
        <h4>Shop by price</h4>
    </div>
    <div class="filter-range-wrap">
        <div class="price-range ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content"
             data-min="0" data-max="999"></div>
        <div class="range-slider">
            <div class="price-input">
                <p>Price:</p>
                <input type="text" id="minprice">
                <input type="text" id="maxprice">
            </div>
        </div>
    </div>
    <a href="#" id="PriceFilter">Filter</a>
</div>


<script>
    document.getElementById("PriceFilter").addEventListener("click", function () {
        var min = document.getElementById("minprice").value.substring(1);
        var max = document.getElementById("maxprice").value.substring(1);
        var category = window.location.href.split('/');
        this.setAttribute("href", "/Book/" + category[4] + "/" + min + "-" + max);
    });
</script>
