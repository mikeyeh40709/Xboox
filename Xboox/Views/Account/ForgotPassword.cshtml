@model Xboox.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "忘記密碼?";
}

@section topCSS{
    <link href="~/Assets/fonts/LogInPage/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Assets/fonts/LogInPage/Linearicons-Free-v1.0.0/icon-font.min.css" rel="stylesheet" />
    <link href="~/Assets/Vendor/LogInPage/animate/animate.css" rel="stylesheet" />
    <link href="~/Assets/Vendor/LogInPage/css-hamburgers/hamburgers.min.css" rel="stylesheet" />
    <link href="~/Assets/Vendor/LogInPage/animsition/css/animsition.min.css" rel="stylesheet" />
    <link href="~/Assets/Vendor/LogInPage/select2/select2.min.css" rel="stylesheet" />
    <link href="~/Assets/Vendor/LogInPage/daterangepicker/daterangepicker.css" rel="stylesheet" />
    <link href="~/Assets/CSS/Custom/LogInPage/main.css" rel="stylesheet" />
    <link href="~/Assets/CSS/Custom/LogInPage/util.css" rel="stylesheet" />
}

@*<div class="text-center">
    <h3 class=" mt-3">@ViewBag.Title</h3>
</div>*@

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-form" style="height: 650px;">
                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "validate-form col-12", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h3 class="text-center mt-3">@ViewBag.Title</h3>
                    <hr />
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.LabelFor(m => m.Phone, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                        <div class="d-block">                  
                        <button type="submit" class="btn btn-primary mt-2 mx-auto">傳送連結</button>
                        </div>
                    </div>
                }
            </div>
            <div class="login100-more" style="background-image: url('/Assets/Image/LogInPage/pic_06.jpg')"></div>

            
        </div>
    </div>
</div>
    <div id="dropDownSelect1"></div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

    @section endJS{
        <script src="~/Assets/Vendor/LogInPage/jquery/jquery-3.2.1.min.js"></script>
        <script src="~/Assets/Vendor/LogInPage/animsition/js/animsition.min.js"></script>
        <script src="~/Assets/Vendor/LogInPage/select2/select2.min.js"></script>
        <script>
            $(".selection-2").select2({
                minimumResultsForSearch: 20,
                dropdownParent: $('#dropDownSelect1')
            });
        </script>
        <script src="~/Assets/Vendor/LogInPage/daterangepicker/moment.min.js"></script>
        <script src="~/Assets/Vendor/LogInPage/daterangepicker/daterangepicker.js"></script>
        <script src="~/Assets/Vendor/LogInPage/countdowntime/countdowntime.js"></script>
        <script src="~/Assets/JavaScript/Custom/LogInPage/main.js"></script>
    }
